.popup
    width 100%
    margin 50px auto
    position: relative
    max-width: 480px
    background-color: #fff
    &_mid
        max-width: 680px

    &__title-block
        text-align: center
        position: relative
        padding 34px 40px 22px
        background $color-main url(../images/popup-title-bg.png) center

    &__title-text
        titleH2()
        margin-bottom: 0
        color #fff

    &__content
        padding 30px 80px 40px
        & *:last-child
            margin-bottom 0

        &_form
            padding 30px 100px 50px

    &__close
        position: absolute
        width 60px
        height @width
        background-color transparent
        border 2px solid $color-main
        border-radius: 3px
        bottom 100%
        pos-center-w()
        z-index: 1
        cursor pointer
        margin-bottom 30px
        &:hover
            background-color $color-main
        &:after, &:before
            content ''
            position: absolute
            top 50%
            left 50%
            width 24px
            height 2px
            background: #fff
        &:after
            transform translate(-50%, -50%) rotate(45deg)
        &:before
            transform translate(-50%, -50%) rotate(-45deg)
