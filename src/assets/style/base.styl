*, *:before, *:after
	box-sizing: border-box
html
body
	height 100%
	width 100%
	font-family $base-ff
	font-size $base-fs
	color $base-fc

body
	-webkit-font-smoothing antialiased
	min-width: 1240px

a
	color $color-main
	text-decoration: none
	transition: color 0.3s ease

	&:hover
		text-decoration: none
		color $color-main-hover

p
	margin-bottom 20px
	line-height $base-lh

h1
	font-size $fsH1
	font-family: $title-ff-light
	text-align center
	line-height: 1.25
	font-weight normal
	text-transform: uppercase
h2
	font-size $fsH2
	font-family: $title-ff-light
	text-align center
	margin-bottom: 0.6em
	line-height: 1.1
	font-weight normal
	text-transform: uppercase
h3
	font-size $fsH3
	font-family: $title-ff-light
	text-align center
	margin-bottom: 0.6em
	line-height: 1.3
	font-weight normal
	text-transform: uppercase
h4
	font-size $fsH4
	font-family: $base-ff-bold
	line-height: 1.6
	font-weight normal

