.card
    display flex
    width 100%
    margin: 20px 0
    &__img-wrap
        width 100%
        max-width 500px
        margin-right: 60px
        min-height: 500px
        height 0px
        flex-center()
        border: 1px solid $color-border
    &__img
        display: inline-block;
        max-width: 100%
        max-height 100%

    &__buy-wrap
        width 100%
        max-width 320px
        padding-top: 30px

    &__row
        display flex
        align-items: baseline;
        margin-bottom: 20px
        &_button
            flex-direction: column;
    &__row-label
        width: 30%
        min-width: 100px
        padding-right 20px
    &__row-content
        width 100%
    &__price
        font-size: 48px
        color: $color-main
    &__rubl
        font-size: 14px
        color: $base-fc
        display: inline-block;
        margin-left: 5px
