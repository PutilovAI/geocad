.team-card
    $tr-delay = 0.5s
    teamTr()
        transition all $tr-delay ease
    $cardWidth = 300/960*100
    $gutterWidth = (100 - $cardWidth*3)/2
    width ($cardWidth)%
    margin-right: ($gutterWidth)%
    margin-top: 30px
    min-height: 450px
    background-color: #ededed
    position: relative;
    teamTr()
    overflow: hidden;
    &:after
        content ''
        position: absolute;
        z-index: 1
        width: 0px
        height 0px
        border-radius: 50%
        background-color: rgba(#232c2f, 0.9)
        bottom 0
        left 0
        teamTr()
        transform translate(-50%, 50%)
    &:nth-child(-n+3)
        margin-top: 0
    &:nth-child(3n)
        margin-right: 0

    &__img-wrap
        text-align: center;
        position: absolute;
        bottom 135px
        width: 100%
        left 0
        z-index: 0
        opacity: 1
        teamTr()
    &__img
        display: inline-block;
        max-width: 100%
        max-height: 310px

    &__overlay
        position: absolute;
        bottom 0
        z-index: 2
        padding 0 50px
        teamTr()

    &__name
        font-size: $fsH4
        line-height: 30px
        font-family: $title-ff-light
        color #333
        text-transform: uppercase;
        margin-bottom: 5px
        teamTr()

    &__role
        font-family: $base-ff-italic
        font-size: 14px
        line-height: 20px
        margin-bottom: 40px
        teamTr()

    &__desc
        max-height: 0
        overflow: hidden;
        font-family: $base-ff-italic
        font-size: 14px
        line-height: 20px
        margin-bottom: 0px
        color #555
        teamTr()

.team-card
    &:hover
        background-color #fff
        &:after
            width 1100px
            height 1100px
        & ^[0]__overlay
            color #fff
        & ^[0]__name
            color #fff
        & ^[0]__role
            color $color-main
        & ^[0]__desc
            max-height: 300px
            margin-bottom 40px
            color #fff




.team-cards
    display: flex;
    flex-wrap: wrap;
