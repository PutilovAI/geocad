.img
    max-width: 100%
    display block


.img-wrap
    display: inline-block
    max-width: 100%
    & .img
        position: relative;
        z-index: 1
        border-radius: 3px
    &_border
        position: relative;
        &:after
            content ''
            position: absolute;
            z-index: 0
            width 100%
            height 100%
            border 1px solid $color-main
            border-radius: 3px
            top 10px
            left 10px
