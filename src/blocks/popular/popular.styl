.popular-card
    width (100/3)%
    min-height: 280px
    padding 60px 40px 50px
    background-color: transparent
    border 1px solid rgba(#fff, 0.2)
    color #fff
    text-align: center;
    &_mark
        background-color #fff
        margin -10px 0
        padding-top 70px
        color #333
        border none

    &__price
        font-size: 24px
        line-height: 60px
        font-family: $title-ff-light

    &__price-count
        color $color-main
        font-size: $fsH1
        margin-right: 5px

    &__desc
        line-height: 20px


.popular-cards
    display: flex;
    margin-bottom: 40px
