.pagination
    display: flex;
    margin 20px 0
    &__item
        margin-right: 10px
        text-align: center;
    &__item-link
        width 40px
        height: 40px
        border 1px solid $color-border
        line-height: 38px
        background-color: #fff
        color $base-fc
        cursor: pointer;
        display: block
        transition: all 0.3s
        &:hover
            background-color: $color-main-hover
            border-color $color-main-hover
            color #fff

    &__item.active
        & ^[0]__item-link
            border-color $color-main
            &:hover
                background-color: #fff
                border-color $color-main
                color $base-fc
                cursor: default
    &__item-more
        width 40px
        height: 40px
        color $base-fc
        line-height: 38px
        display: block

.pagination-wrap
    display: flex;
    justify-content: space-between;
    align-items: center;
