.quote
    margin 40px 0
    padding 30px
    position: relative
    border-top 1px solid #cdcdcd
    border-bottom 1px solid #cdcdcd
    &:after, &:before
        content ''
        pos-center-w()
        width 40px
        height 4px
        background-color $color-main

    &:after
        bottom -2px
    &:before
        top -2px

    &__text
        font-family: $base-ff-italic
        margin-bottom 20px
        text-align: center
        &:last-child
            margin-bottom 0
