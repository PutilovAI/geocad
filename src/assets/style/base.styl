*, *:before, *:after
    box-sizing: border-box
html
body
    height 100%
    width 100%
    font-family $base-ff
    font-size $base-fs
    color $base-fc

body
    -webkit-font-smoothing antialiased
    min-width: 1020px

a
    color $color-main
    text-decoration: none
    transition: all 0.3s ease

    &:hover
        text-decoration: none
        color $color-main-hover

p
    margin-bottom 20px
    line-height $base-lh

h1
    titleH1()
    text-align center

h2
    titleH2()
    text-align center

h3
    titleH3()
    text-align center
h4
    font-size $fsH4
    font-family: $base-ff-bold
    line-height: 1.6
    font-weight normal

