.service-big-card
    $wrapH = 240px
    width 100%
    display: flex
    align-items: stretch;
    border 1px solid $color-border
    border-bottom none
    &__col
        width 50%
        position: relative;
        height $wrapH
        &_left
            $bgColorLeftCol = #fff
            background-color $bgColorLeftCol
            background-image url(../images/map-marker-bg.png)
            background-position: -45px 45px
            background-repeat: no-repeat;
            padding-top: 40px
            padding-bottom: 40px
            padding-left: 130px
            z-index: 2
            &:after
                content ''
                position: absolute;
                left 100%
                top 0
                border-left 45px solid $bgColorLeftCol
                border-top ($wrapH/2) solid transparent
                border-bottom ($wrapH/2) solid transparent
        &_right
            background-color #2e4850
            z-index: 1
            display: flex
            align-items: center;
            padding-left: 95px
            color #fff
            font-family: $base-ff-italic
            font-size: 14px
            padding-right 40px
            line-height: 30px

    &__col-container
        text-align: left

    &__title
        color $color-main
        font-size: 24px
        line-height: 30px
        font-family: $title-ff-medium
        margin-bottom: 10px

    &__link
        color #333
        border-bottom 1px solid #acacac
        &:hover
            border-bottom-color transparent

    &__icon-wrap
        position: absolute;
        left 40px
        top 40px
        width 60px
        height @width
        flex-center()
        border 2px solid $color-main
        background-color $color-main
        border-radius: 3px
