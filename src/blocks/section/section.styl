.section
    width 100%
    background-size cover
    background-position center
    background-repeat: no-repeat
    position relative
    padding 40px 0

    &_first
        padding-top 0

    &__sidebar
        width 260px
        margin-right -260px
        float left

    &__filter
        width 210px
        margin-left -210px
        float left

    &__content
        width 100%
        &_catalog
            padding-left 280px
            float: left
        &_filter
            padding-right 230px


    &__title
        font-size: $fsH2
        font-family: $base-ff
        padding-bottom: 30px
        padding-top 40px

    &__title-wrap
        text-align: center
        margin-bottom: 30px
        position: relative;
        &:after
            content ''
            position: absolute;
            bottom -2px
            width 100%
            max-width: 180px
            height 2px
            pos-center-w()
            background-color $color-main
            z-index: 2

        &_page
            background-color #eaeaea
            margin-bottom: 0
            background: url(../images/bg-main-title.png) no-repeat center
            background-size: cover
            background-color: #1d272a
            & ^[0]__title
                font-size: $fsH1
                padding-bottom: 34px
                padding-top 30px
                font-family: $title-ff-light
                max-width: 720px
                margin 0 auto
                color #fff


        &_semi
            margin-bottom 0
            background-color: transparent

            & ^[0]__title
                font-size: $fsH4
                padding-bottom: 30px
                padding-top 40px
        &_delimiter
            margin-bottom 40px
            background-color: transparent
            border-bottom 1px solid $color-border

            & ^[0]__title
                font-size: $fsH3
                padding-bottom: 30px
                padding-top 40px
.section
    &_bg-intresting
        background: url(../images/bg-section-intresting.png) no-repeat center top
.section
    &_error-404
        background: url(../images/bg-404.jpg) no-repeat center
        background-size: cover
        min-height: 100%
        flex-center()
