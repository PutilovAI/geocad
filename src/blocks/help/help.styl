.help
    color #fff
    background-color $color-main
    margin-top: 100px

    &__container
        max-width: 1000px
        margin: 0 auto
        position: relative



    &__row
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-height: 130px
        height 0

    &__title
        font-size: $fsH3
        line-height: 1.3
        font-family: $base-ff-light

    &__women
        position: absolute;
        width image-size('./assets/women.png')[0]
        height image-size('./assets/women.png')[1]
        background url(../images/women.png)
        bottom 0
        left 180px
