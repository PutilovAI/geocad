.intro
    position: relative;
    padding-left: 260px
    width 100%
    margin-bottom: 20px

    &__img
        position: relative;
        display: block;
        width: 100%

    &__content
        position: absolute;
        top: 110px
        left (260 + 100)px
        z-index: 2

    &__title
        font-size 80px
        line-height: 1
        font-family: $base-ff-light
        margin-bottom: 45px
        text-transform: uppercase;

    &__minititle
        font-size: 12px
        text-transform: uppercase;
        color: $color-main
        margin-bottom: 5px
