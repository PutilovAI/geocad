.basket-popup
    &__item
        width 100%
        position: relative;
        display: flex

    &__info
        max-width 100%
        margin-left 40px
        width 100%

    &__info-row
        display: table-row

    &__info-cell
        display: table-cell;
        vertical-align: top;
        padding: 20px 40px 15px 0
        width 65%
        position: relative;
        &_price
            width 35%
            text-align: right;
            padding-right 0
    &__buttons
        margin-top: 30px
        display: flex
        justify-content: space-between;

    &__button
        width 48%

    &__item-img-wrap
        min-width 150px
        width 150px
        height @width
        border: 1px solid $color-border
        flex-center()

    &__item-img
        display: inline-block;
        max-width: 90%
        max-height: 90%
    &__item-label
        font-size: 12px
        color $color-grey
        margin-bottom: 2px
    &__item-name
        font-size: 16px
        line-height: 1.3
    &__item-price
        font-size: $fsH4
        color $color-main
        font-family: $base-ff-semibold
        white-space: nowrap;

    &__item-price-rubl
        font-size: $base-fs
        color $base-fc
        display: inline-block;
        margin-left 3px
        font-family: $base-ff


    &__total
        cf()
        padding 30px 0
    &__total-content
        float right
        width 20%
        display flex
        align-items: baseline;
        justify-content: space-between;
    &__total-price
        font-size: $fsH2
        color $color-main
        font-family: $base-ff-semibold
    &__total-price-rubl
        font-size: $base-fs
        color $base-fc
        display: inline-block;
        margin-left 3px
        font-family: $base-ff


    &__form
        border 1px solid $color-border
        padding 60px 60px 40px
        display: flex;
        justify-content: space-between;
    &__form-col
        width 48%

    &__item-cell-row
        margin-bottom 30px

    //modifiers
    &__item_one-click
        display block
        margin-bottom: 25px
        & ^[0]__item-cell
            border-bottom none
            width 100%
            padding 0 20px
            &:last-child, &:first-child
                padding 0
                text-align: right
                width auto
        & ^[0]__item-img-wrap
            width 80px
            height 80px

    &__item_popup
        display block
        margin-bottom: 25px
        & ^[0]__item-cell
            border-bottom none
            width 100%
            padding 0 40px
            vertical-align: top;
            &:last-child, &:first-child
                padding 0
                text-align: right
                width auto
            &:nth-child(n+2)
                padding-top 20px

        & ^[0]__item-img-wrap
            width 150px
            height 150px
