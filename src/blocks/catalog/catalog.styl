.catalog
    display: flex
    flex-wrap: wrap;
    margin-bottom: -1px
    &__item
        text-align: center
        background-color: #fff
        width (100/4)%
        border 1px solid $color-border
        border-width 0 0 1px 1px
        &:nth-child(4n), &:last-child
            border-right-width 1px

        &-container
            padding 30px 30px 35px

        &-content
            position: relative

        &-name
            font-size: $fsH4
            margin-bottom: 20px
            padding-bottom: 18px
            line-height: 1.3
            position: relative;
            color $base-fc
            display: block;
            &:after
                content ''
                position: absolute;
                bottom 0px
                width 100%
                max-width: 40px
                height 2px
                pos-center-w()
                background-color $color-main
                z-index: 2


        &-img-link
            width 100%
            display: block;
        &-img
            max-width: 100%
            display: inline-block;

        &-wrap-img
            margin-bottom: 25px
            min-height: 140px;

        &-list-row
            margin-bottom: 20px
            &.hide
                display none

        &-list-row-link
            text-decoration: none
            color: $base-fc
