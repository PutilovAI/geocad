.list
    list-style: none
    & li, &__item
        margin-bottom 15px
        font-size: $base-fs
        line-height: $base-lh
        padding-left: 40px
        list-style: none
        position: relative
        &:last-child
            margin-bottom 0

        &:before
            content ''
            width 10px
            height @width
            background-color: $color-main
            position: absolute
            left 0
            top 11px
    ol&, &_count
        counter-reset: myCounter
        & li, &__item
            &:before
                counter-increment: myCounter;
                content:counter(myCounter) '.';
                width auto
                height auto
                border none
                position: absolute
                left 0
                top 1px
                color $color-main
                font-family: $base-ff-bold
                background-color: transparent

.list
    &_small
        & li, & ^[0]__item
            margin-bottom 6px
            font-size: 14px
            padding-left: 20px

            &:before
                width 6px
                height @width
                top 11px
