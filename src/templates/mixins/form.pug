mixin form(data, mod)
    -
        var data = data || {}
        var formName = data.name || 'noname'
        var inputs = data.inputs || []
        var mod = mod || 'js-valid-form'
        var buttonText = data.buttonText || 'Отправить'
        var buttonMod = data.buttonMod || 'js-valid-form__button'
        var buttonWrapMod = data.buttonWrapMod || 'h-align_center'

        var contentInputs = {
            name : {
                label : "Ваше имя:",
                placeholder : "Иван Иванов",
                required: true,
                error: "Введите имя",
                id: 'form-'+formName+'-name'
            },
            email : {
                label : "Ваш e-mail:",
                placeholder : "mymail@mail.ru",
                required: true,
                error: "Введите e-mail",
                id: 'form-'+formName+'-email'
            },
            phone : {
                label : "Телефон:",
                placeholder : "",
                required: true,
                error: "Введите телефон",
                type: 'phone',
                id: 'form-'+formName+'-phone'
            },
            address: {
                label : "Адрес доставки:",
                placeholder : "Москва",
                required: true,
                error: "Введите адрес доставки",
                id: 'form-'+formName+'-address'
            },
            extra: {
                label : "Дополнительная информация:",
                placeholder : "...",
                type: 'textarea',
                id: 'form-'+formName+'-extra'
            },
            letter: {
                label : "Текст письма:",
                placeholder : "...",
                type: 'textarea',
                id: 'form-'+formName+'-extra'
            }
        }

    form.form(class=mod, action="#" name=formName)
        each item, i in inputs
            .form__row
                +input(contentInputs[item])

        .form__row(class=buttonWrapMod)
            button.button(type='submit' class=buttonMod)!= buttonText
