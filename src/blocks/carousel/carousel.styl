.carousel
    position: relative


    &_popular
        & .owl-item
            border 1px solid $color-border
            border-right none
        & .owl-stage-outer
            border-left 1px solid $color-border
            border-bottom 1px solid $color-border

        & .owl-carousel .owl-item img
            width auto
            display: inline-block;
        & .owl-carousel .owl-stage
            display: flex


    &__control
        position: absolute
        width 40px
        height @width
        border 1px solid #c3c3c3
        cursor: pointer
        transition all 0.3s
        user-select none
        margin-top: -20px;
        z-index: 2;
        background-color: #fff

        &_next
            arrow(bg: $color-main, left: 18px)
        &_prev
            arrow(bg: $color-main, left: 18px, direction:"left")
        &:after, &:before
            transition all 0.3s
        &:hover
            background-color: $color-main-hover
            border-color: $color-main-hover
            &:after, &:before
                background-color:#fff



    &_popular
        & ^[0]__control
            position: relative;
            left calc(50% - 40px)
            float: left
            &_prev
                margin-left 0
            &_next
                margin-left -1px
