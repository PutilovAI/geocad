.basket
    &__items
        display table
        table-layout: fixed
        width: 100%
    &__item
        width 100%
        display: table-row;
        position: relative;

        &_head
            color #666

    &__item-delete
        position: relative;
        width 18px
        height @width
        cursor pointer
        transform translateX(-100%)
        &:after, &:before
            content ''
            position: absolute;
            display block
            width 100%
            height 1px
            background-color $color-main
            top 50%
            left 0
            transition all 0.3s
        &:after
            transform rotate(45deg)
        &:before
            transform rotate(-45deg)

        &:hover
            &:after, &:before
                background-color: $color-main-hover

    &__item-cell
        display: table-cell;
        vertical-align: middle;
        padding: 20px 30px 20px 0
        border-bottom 1px solid $color-border
        width 20%
        position: relative;
        &_delete
            width 1%

    &__item-img-wrap
        width 120px
        height @width
        border: 1px solid $color-border
        flex-center()

    &__item-img
        display: inline-block;
        max-width: 90%
        max-height: 90%
    &__item-label
        font-size: 12px
        color $color-grey
        margin-bottom: 2px
    &__item-name
        font-size: 16px
        line-height: 1.3
    &__item-price
        font-size: $fsH4
        color $color-main
        font-family: $base-ff-semibold
        white-space: nowrap;

    &__item-price-rubl
        font-size: $base-fs
        color $base-fc
        display: inline-block;
        margin-left 3px
        font-family: $base-ff


    &__total
        cf()
        padding 30px 0
    &__total-content
        float right
        width 20%
        display flex
        align-items: baseline;
        justify-content: space-between;
    &__total-price
        font-size: $fsH2
        color $color-main
        font-family: $base-ff-semibold
    &__total-price-rubl
        font-size: $base-fs
        color $base-fc
        display: inline-block;
        margin-left 3px
        font-family: $base-ff


    &__form
        border 1px solid $color-border
        padding 60px 60px 40px
        display: flex;
        justify-content: space-between;
    &__form-col
        width 48%

    &__item-cell-row
        margin-bottom 30px

    //modifiers
    &__item_one-click
        display block
        margin-bottom: 25px
        & ^[0]__item-cell
            border-bottom none
            width 100%
            padding 0 20px
            &:last-child, &:first-child
                padding 0
                text-align: right
                width auto
        & ^[0]__item-img-wrap
            width 80px
            height 80px

    &__item_popup
        display block
        margin-bottom: 25px
        & ^[0]__item-cell
            border-bottom none
            width 100%
            padding 0 40px
            vertical-align: top;
            &:last-child, &:first-child
                padding 0
                text-align: right
                width auto
            &:nth-child(n+2)
                padding-top 20px

        & ^[0]__item-img-wrap
            width 150px
            height 150px
