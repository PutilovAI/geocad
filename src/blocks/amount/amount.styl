.amount
    width: 100%
    max-width: 150px
    position: relative;
    &_full
        max-width: 100%
    &__input-wrap
        margin: 0 40px
    &__input
        width 100%
        font-size: 14px
        height 40px
        padding 0.6em 0.6em 0.6em
        background-color $input-bg
        border 1px solid $input-border
        outline none
        color $input-color
        text-align: center;
        transition all 0.3s linear
        &:hover
            border-color $input-border-hover

        &:focus
            outline none
            border-color $input-border-focus

    &__control
        position: absolute;
        top 0
        width 40px
        height: 40px
        border 1px solid $color-border
        line-height: 36px
        background-color: #fff
        color $color-main
        cursor: pointer;
        display: block
        transition: all 0.3s
        text-align: center;
        font-size: 24px
        transition: all 0.3s
        user-select none

        &:hover
            background-color: $color-main-hover
            border-color $color-main-hover
            color #fff
        &_add
            right 0
            border-width 1px 1px 1px 0
        &_reduce
            border-width 1px 0 1px 1px
            line-height: 34px
            left 0
            color #c9c9c9
            &:hover
                background-color: #c9c9c9
                border-color #c9c9c9


        &.disabled,&[disabled]
            color  $color-border
            border-color $color-border
            background-color: #fff
            cursor: default;
            &:hover
                color  $color-border
                border-color $color-border
                background-color: #fff
                cursor: default;
