.slide-container
    height 700px
    position: relative;
    overflow: hidden;
.slide
    height 700px
    position: relative;
    overflow: hidden

    &__img-wrap
        background-color #000
        position: absolute;
        height 100%
        width 100%
        top 0
        left 0
        overflow: hidden;
        &:after
            content ''
            position: absolute;
            bottom 0
            height 100px
            width 100%
            background-image: linear-gradient(to top,  rgba(#000, 0.6) 0%, rgba(#000, 0) 100%);
    &__img
        position: absolute;
        pos-center()
        opacity: 0.6
        min-height: 100%
        min-width: 100%

    &__container
        max-width: 1020px
        padding 0 30px
        margin 0 auto
        margin-top: 165px

    &__icon
        width 140px
        height @width
        border-radius 50%
        background-color $color-main
        position: absolute;
        top -20px
        left -210px
        flex-center()
        &:before
            content ''
            imgSize('assets/slide-icon-lines.png')
            border-radius 50%
            background url(../images/slide-icon-lines.png) no-repeat center
            position: absolute;
            pos-center()


    &__content
        max-width: 470px
        margin-left 420px
        position: relative;

    &__title
        titleH1()
        color #f2f2f2
    &__desc
        color #f2f2f2
        line-height: $base-lh
        margin-bottom: 40px
    &__price
        color $color-main
